<%- include('../partials/header'); %>

<main class="main" id="labelMain">
    <div class="container">
        <div class="row">
            <% data.forEach(item => { %>
                <div class="col-md-4">
                    <figure class="figure album-figure">
                        <a href="/album/<%= item.album_id %>">
                            <img src="/images/<%= item.album_cover %>" alt="<%= item.title %>" class="figure-img img-fluid rounded" />
                        </a>
                                <figcaption class="figure-caption">
                                    <%= item.title %> |
                                    <% if item.band === '') { %>
                                        if (item.alias === '') { %>
                                            <%= item.fName %> <%= item.lName %>
                                    <% } else { %>
                                        <%= item.alias %>
                                    <% } %>
                                <% } else { %>
                                    <%= item.band %>
                                <% } %>    
                                </figcaption>
                                <figcaption class="figure-caption">
                                    <a href="/album/label/<%= item.label_id %>">
                                    <%= item.label %>
                                    </a>
                                </figcaption>
                            </figure>
                    </figure>
                </div> 
           <% }); %>
        </div>                           
    </div>
</main>
<%- include('../partials/footer'); %>